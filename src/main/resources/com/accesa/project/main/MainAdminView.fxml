               <Font name="Helvetica" size="13.0" />
            </font>
            <VBox.margin>
               <Insets left="10.0" right="20.0" top="10.0" />
            </VBox.margin>
         </Button>
           <Button fx:id="logoutButton" onAction="#logoutButtonClicked" prefHeight="24.0" prefWidth="109.0" style="-fx-background-color: #1F1B24; -fx-text-fill: white;" text="Logout">
            <VBox.margin>
               <Insets left="10.0" right="20.0" top="400.0" />
            </VBox.margin>
         </Button>
         <BorderPane.margin>
            <Insets right="20.0" />
         </BorderPane.margin>
        </VBox>
    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="480.0" prefWidth="461.0">
            <VBox fx:id="questionBox" prefHeight="478.0" prefWidth="438.0" spacing="10.0" style="-fx-background-color: #121212; -fx-border-color: #121212;" />
        </ScrollPane>
    </center>
