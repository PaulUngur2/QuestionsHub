<BorderPane fx:id="rootPane" prefHeight="480.0" prefWidth="720.0" style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.accesa.project.main.MainAdminViewController">
