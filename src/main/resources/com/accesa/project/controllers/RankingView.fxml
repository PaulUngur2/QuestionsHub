<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="rootPane" prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.accesa.project.controllers.RankingController">
    <style>-fx-background-color: #121212;</style>
    <left>
        <VBox spacing="10.0">
            <style>-fx-background-color: #121212;</style>
            <Button onAction="#backButtonClicked" prefHeight="24.0" prefWidth="109.0" text="Back">
                <style>-fx-background-color: #1F1B24; -fx-text-fill: White;</style>
                <font>
                    <Font name="Helvetica" size="13.0" />
                </font>
                <VBox.margin>
                    <Insets left="10.0" right="20.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Label fx:id="rankLabel" text="Tokens: " textFill="WHITE">
                <font>
                    <Font name="Helvetica" size="14.0" />
                </font>
                <VBox.margin>
                    <Insets left="10.0" top="20.0" />
                </VBox.margin>
            </Label>
            <Button onAction="#logoutButtonClicked" prefHeight="24.0" prefWidth="109.0" text="Logout">
                <style>-fx-background-color: #1F1B24; -fx-text-fill: white;</style>
                <VBox.margin>
                    <Insets left="10.0" right="20.0" top="350.0" />
                </VBox.margin>
            </Button>
            <BorderPane.margin>
                <Insets right="20.0" />
            </BorderPane.margin>
        </VBox>
    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="480.0" prefWidth="461.0">
            <VBox fx:id="rankBox" prefHeight="478.0" prefWidth="438.0" spacing="10.0">
                <style>-fx-background-color: #121212; -fx-border-color: #121212;</style>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
